<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EstablishmentUpdateView">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/pt_Name_EstablishmentUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@drawable/border"
            android:fontFamily="@font/amaranth"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#64C27B"
            android:textSize="15sp"
            android:hint="Name"
            android:textColorHint="#BDBDBD"/>

        <EditText
            android:id="@+id/pt_Description_EstablishmentUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@drawable/border"
            android:fontFamily="@font/amaranth"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#64C27B"
            android:textSize="15sp"
            android:hint="Description"
            android:textColorHint="#BDBDBD"/>

        <EditText
            android:id="@+id/et_Adress_EstablishmentUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@drawable/border"
            android:inputType="textMultiLine"
            android:fontFamily="@font/amaranth"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#64C27B"
            android:textSize="15sp"
            android:hint="Adress"
            android:textColorHint="#BDBDBD"/>

        <EditText
            android:id="@+id/num_Latitude_EstablishmentUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@drawable/border"
            android:fontFamily="@font/amaranth"
            android:hint="Latitude"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#64C27B"
            android:textColorHint="#BDBDBD"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/num_Longitude_EstablishmentUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@drawable/border"
            android:inputType="number"
            android:fontFamily="@font/amaranth"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#64C27B"
            android:textSize="15sp"
            android:hint="Longitude"
            android:textColorHint="#BDBDBD"/>

        <Button
            android:id="@+id/bt_Update_EstablishmentUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:fontFamily="@font/amaranth"
            android:text="UPDATE"
            app:backgroundTint="#2A8C4A" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>