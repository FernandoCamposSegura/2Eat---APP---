<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnly_Content"
    android:background="@drawable/linear_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    android:elevation="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/main_logo" />

    <TextView
        android:id="@+id/tv_Name_EstablishmentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        android:background="#2A8C4A"
        android:textSize="20sp"
        android:text="TextView"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tv_Description_EstablishmentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:layout_weight="1"
        android:background="@drawable/linear_border"
        android:fontFamily="@font/aleo"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#B0B0B0"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_Adress_EstablishmentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aleo"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#2A8C4A"
        android:textSize="15sp" />

    <Button
        android:id="@+id/star_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10px"
        android:background="@drawable/empty_star"
        android:layout_gravity="start"/>

</LinearLayout>